<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% submit_text = band.persisted? ? "Update Band!" : "Add Band!" %>
<form class="form" action="<%= action_url %>" method="post">
  <% if band.persisted? %>
    <input type="hidden" name="_method" value="patch"">
  <% end %>
  <%= auth_token %>

  <p>
    <label for="band_name">Name</label>
    <input type="text" name="band[name]" id="band_name" value="<%= band.name %>">
  </p>
  <input type="submit" value="<%= submit_text %>">
</form>