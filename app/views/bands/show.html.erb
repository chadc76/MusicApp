<section class="page">
  <div class="centered-box">
    <%= flash[:notice] %>
    <h1><%= @band.name %></h1>
    <%= button_to "Edit Band", edit_band_url(@band), method: :get  %>
    <%= button_to "Delete Band", band_url, method: :delete %>
    <%= button_to "Band index page", bands_url, method: :get  %>
    
    <br>

    <h1>Albums</h1>
    <table>
      <tbody>
        <tr>
          <th>Title</th>
          <th class="year">Year</th>
        </tr>
        <% @band.albums.each do |album| %>
        <%= render 'album_tr', album: album %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>