<div class="user-item">
  <div class="user-item-info">
    <p><%= user.email %></p>
    <% if user.admin %>
      <%= link_to "Remove Admin", remove_admin_user_url(user), class: "button" %>
    <% else %>
      <%= link_to "Make Admin", make_admin_user_url(user), class: "button" %>
    <% end %>
  </div>
</div> 