<% action_url = log_in ? session_url : users_url %>
<% submit_text = log_in ? "Log in!" : "Sign up!" %>
<% link_text = log_in ? "Go to Sign-up" : "Go to Log in" %>
<% link_url = log_in ? new_user_url : new_session_url %>

<a class="button" href="<%= link_url %>"><%= link_text %></a>

<form class="form" action="<%= action_url %>" method="post">
  <%= auth_token %>
  
  <p>
    <label class="email-label" for="user_email">Email</label>
    <input type="text" name="user[email]" id="user_email">
  </p>

  <p>
    <label for="user_password">Password</label>
    <input type="password" name="user[password]" id="user_password">
  </p>

  <input type="submit" value="<%= submit_text %>">
</form>